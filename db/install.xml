<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/greet/db" VERSION="20140224" COMMENT="XMLDB file for Moodle local/greet"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_greet_greetings" COMMENT="Stores a list of names that can be greeted.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="The name to greet"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="name" UNIQUE="true" FIELDS="name" COMMENT="Names must be unique"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
